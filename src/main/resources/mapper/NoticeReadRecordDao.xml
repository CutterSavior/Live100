<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanjii.biz.admin.notice.dao.NoticeReadRecordDao">

    <!-- 通用结果集映射 -->
    <resultMap id="BaseResultMap" type="com.lanjii.biz.admin.notice.model.entity.NoticeReadRecord">
        <id column="id" property="id"/>
        <result column="notice_id" property="noticeId"/>
        <result column="user_id" property="userId"/>
        <result column="read_time" property="readTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 批量插入阅读记录 -->
    <insert id="batchInsertReadRecords">
        INSERT IGNORE INTO sys_notice_read_record (notice_id, user_id, read_time, create_time)
        SELECT n.id, #{userId}, NOW(), NOW()
        FROM sys_notice n
        LEFT JOIN sys_notice_read_record r ON n.id = r.notice_id AND r.user_id = #{userId}
        WHERE n.status = 1
          AND n.is_deleted = 0
          AND r.user_id IS NULL
          <if test="noticeIds != null and noticeIds.size() > 0">
              AND n.id IN
              <foreach collection="noticeIds" item="id" open="(" separator="," close=")">
                  #{id}
              </foreach>
          </if>
    </insert>

</mapper>
